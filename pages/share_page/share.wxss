}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.ui_uploader_cell {
  width: 80%;
  height: 600rpx;
  margin-left: 10%;
  margin-right: 10%;
  padding-top: 3%;
  box-sizing: border-box;
  background-color: white;
}

.ui_uploader_item {
  float: left;
  position: relative;
  margin-left: 4%;
  margin-right: 1%;
  margin-bottom: 25rpx;
  width: 165rpx;
  height: 165rpx;
}

.ui_uploader {
  float: left;
  position: relative;
  margin-left: 4%;
  margin-right: 1%;
  margin-bottom: 25rpx;
  /* padding-top: 3%; */
  width: 165rpx;
  height: 165rpx;
  border: 2rpx solid black;
  box-sizing: border-box;
}

.ui_uploader:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: black;
}

.ui_uploader:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: black;
}

.ui_uploader_item_icon {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  background: #fff;
  border-radius: 50%;
}

.ui_uploader_item image {
  width: 100%;
  height: 100%;
}

