<view class="whole">
  <view class="top_search">
    <view class="search">
      <view class="df searchBar">
        <icon class="icon_search" size='20' type='search'></icon>
        <input class="input_search" placeholder="请输入关键字" value="{{searchValue}}" />
      </view>
    </view>
    <view class='btn_search'>搜索</view>
  </view>

  <view class="content">

    <view class="left">
      <block wx:for="{{note}}" wx:key="1">
        <template is="item" data="{{...item}}" wx:if="{{index%2==0}}"></template>
      </block>
    </view>
    <view class="right">
      <block wx:for="{{note}}" wx:key="1">
        <template is="item" data="{{...item}}" wx:if="{{index%2==1}}"></template>
      </block>
    </view>
  </view>
  <!--  下面是一个模块 -->
  <template name="item">
    <view class="loadImg  loadImg{{index}} {{show? 'active' : ''}}">

      <image class="item-img" src="{{url}}" mode="widthFix"></image>
      <view class="item-title-box">
        <navigator url="url" class="item-title">{{title}}</navigator>
        <image class="arrow" src="../../resources/arrow下拉.png"></image>
      </view>

      <view class="name">

      
        <image class="item-ava" src="{{avatar}}"></image>
        <text class="name-title">{{name}}</text>

        <view class="heart_">
          <image class="heart" src="../../resources/heart.png"></image>
          <text>{{heart_num}}</text>
        </view>


      </view>

    </view>

  </template>

</view>